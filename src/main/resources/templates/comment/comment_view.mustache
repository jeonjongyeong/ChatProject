<div>
    <label class="label">
        <span class="label-text">댓글</span>
    </label>
    <table>
        <tr>
            <td name="comments" value="{{#CommentForm}}{{comments}}{{/CommentForm}}"></td>
            {{#validationErrors}}
                {{#comments}}
                    <div class="alert alert-primary alert-dismissible">
                        {{comments}}
                    </div>
                {{/comments}}
            {{/validationErrors}}
        </tr>
    </table>
    {{#commentList}}
        <div class="card my-3">
            <div class="card-body">
                <div class="card-text" style="white-space: pre-line;">
                    {{comments}}
                </div>
                <div class="d-flex justify-content-end">
                    <div class="badge bg-light text-dark p-2 text-start">
                        <div>{{updateDate}}
                        </div>
                    </div>


                    <!--  수정  버튼 -->
                    <button type="button" class="btn btn-danger" id="btn-modify"
                            onClick="location.href='/comment/modify/{{id}}'">수정
                    </button>

                    <button type="button" class="btn btn-danger" id="btn-delete"
                            onClick="location.href='/comment/delete/{{id}}'">삭제
                    </button>
                </div>
            </div>
        </div>
    {{/commentList}}
</div>



<script>
{
var collapseElementList = [].slice.call(document.querySelectorAll('.collapse'))
var collapseList = collapseElementList.map(function (collapseEl) {
  return new bootstrap.Collapse(collapseEl)
})

}



</script>
