<table>
    <tr>
        <td name="comments" value="{{#CommentForm}}{{comments}}{{/CommentForm}}"></td>
        {{#validationErrors}}
            {{#comments}}
                <div class="alert alert-primary alert-dismissible">
                    {{comments}}
                </div>
            {{/comments}}
        {{/validationErrors}}
    </tr>
</table>
<form action="/comment/create/{{id}}" method="post" class="my-3">
    <div class="form-control">
        <label class="label">
            <span class="label-text">댓글 쓰기</span>
        </label>
        <textarea class="textarea textarea-bordered h-24" placeholder="댓글을 입력해 주세요" name="comments"
                  id="comments"></textarea>
    </div>
    <input type="submit" value="댓글등록" class="btn btn-outline"/>
    <a href="/article/list" class="btn btn-primary">뒤로가기</a>
</form>

<form action="/comment/delete/{{id}}" method="post" class="my-3">
  <div class="col-md-12">
    <div class="d-flex justify-content-center">
      <button type="button" class="btn btn-danger" id="btn-delete" onClick="location.href='/article/delete/{{article.id}}'">삭제</button>
    </div>
</form>