{{>layouts/header}}
<div var="pageTitle" value="게시물 수정" />
<section class="mt-5">
  <div class="container mx-auto px-3">
    <form class="table-box-type-1" method="POST"
      action="/article/doModify">
      <input type="hidden" name="id" value="${article.id}" />
        {{#article}}
        <table>

        <tbody>
          <tr>
            <th>번호</th>
            <td>
              <div class="badge badge-outline">{{id}}</div>
            </td>
          </tr>
          <tr>
            <th>작성날짜</th>
            <td>{{regDate}}</td>
          </tr>
          <tr>
            <th>수정날짜</th>
            <td>{{updateDate}}</td>
          </tr>
          <tr>
            <th>작성자</th>
            <td>{{nickName}}</td>
          </tr>
          <tr>
            <th>제목</th>
            <td>
              <input class="input input-bordered w-full max-w-xs"
                name="title" type="text" placeholder="제목"
                value="{{title}}" />
            </td>
          </tr>
          <tr>
            <th>내용</th>
            <td>
              <textarea class="textarea textarea-bordered w-full"
                placeholder="Bio" name="body" rows="10">{{body}}</textarea>
            </td>
          </tr>
          <tr>
            <th>수정</th>
            <td>
              <input class="btn btn-active" type="submit" value="수정" />
              <button class="btn btn-outline" type="button"
                onclick="history.back();">뒤로가기</button>
            </td>
          </tr>
        </tbody>
          <colgroup>
          <col width="200" />
      </colgroup>
      </table>
{{/article}}
    </form>

    <div class="btns">
      <button class="btn btn-link" type="button"
        onclick="history.back();">뒤로가기</button>
    </div>
  </div>
</section>