{{>layouts/header}}
<div class="container my-3">
    {{#article}}
        <h3 class="border-bottom py-2">{{title}}</h3>
        <div class="d-flex justify-content-end">조회수 : {{viewCount}}</div>
        <div class="card my-3">
            <div class="card-body">
                <div class="card-text" style="white-space: pre-line;">
                    {{body}}
                </div>
                <div class="d-flex justify-content-end">
                    <div class="badge bg-light text-dark p-2 text-start">
                        <div>{{updateDate}}</div>
                    </div>
                </div>
            </div>

        </div>
        {{>article/article_delete}}
        <button class="btn btn-primary mr-2" type="button" data-bs-toggle="collapse"
                data-bs-target="#comment_view" aria-expanded="false"
                aria-controls="collapseExample"
                id="btn-view">댓글 보기
        </button>
        {{>comment/comment_view}}
    {{/article}}

</div>
{{>layouts/footer}}




